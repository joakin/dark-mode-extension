{
  "name": "Dark mode",
  "description": "Makes light websites darker",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "/src/background.js"
  },
  "action": {
    "default_title": "Press to enable dark mode in this page"
  },
  "permissions": ["activeTab", "scripting"],
  "icons": {
    "16": "/images/icon.png",
    "32": "/images/icon.png",
    "48": "/images/icon.png",
    "128": "/images/icon.png"
  }
}
